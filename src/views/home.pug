doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Goom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Goom
        main
            div#nicknameSave
                form
                    input(placeholder="Enter your nickname", required, type="text")
                    button#save Save
            div#nicknameChange
                form
                    h1 Your Nick name is
                    h2#savedNickname Saved Nickname
                    button#change Change
            div#welcome
                form
                    h2 Opened Room List
                    ul
                    input(placeholder="Enter room name", required, type="text")
                    button Enter Room
            div#room
                h1 Room Name
                ul
                form
                    input(placeholder="")
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")